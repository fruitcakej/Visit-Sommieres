<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="@dimen/padding_8dp" >

    <!--Maybe linearlayout would be better here -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@id/imageItem"
            android:padding="@dimen/padding_8dp" />

        <TextView
            android:id="@+id/short_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attraction_name"
            android:padding="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/short_desc" />

        <!-- Change to id 'more_info_btn' for pop-up?-->
        <!-- id 'more_info' to be on popup activity-->
        <!-- Text field should then change to More Info-->
        <TextView
            android:id="@+id/more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:text="More Info"
            android:padding="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/more_info" />

        <ImageView
            android:id="@+id/googleMapsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/padding_8dp"
            android:src="@drawable/ic_maps" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
